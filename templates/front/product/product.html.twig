{% extends 'front/base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}

	<div class="container-fluid py-3 bg-light text-center">
		{{ front }}
	</div>

	<div class="container mt-5">
		<div class="border p-5">
			<h1>{{ product.name }}</h1>
			<p>{{ product.price }}</p>
			<p>{{ product.stock }}</p>
			<p>{{ product.brand.name }}</p>
			<p>{{ product.brand.description }}</p>
			<p>{{ product.category.name }}</p>
			<p>{{ product.category.description }}</p>
			<p>
				{% for media in product.media %}<img src="{{ asset('media/'~media.src) }}" alt="" width="100px">
				{% endfor %}
			</p>

		</div>
	</div>

{% endblock %}
