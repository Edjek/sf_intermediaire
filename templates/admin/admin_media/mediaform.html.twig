{% extends 'admin/base.html.twig' %}

{% block title %}Upload
{% endblock %}

{% block body %}
	<div class="container">
		<div class="my-3">
			<a href="{{ path('main') }}" class="btn btn-outline-primary">
				Accueil
			</a>
			<a href="{{ path('product_list') }}" class="btn btn-outline-primary">
				Retour Ã  la liste
			</a>
		</div>

		{{ form_start(mediaForm) }}

		<div class="mb-3">
			{{ form_label(mediaForm.title, 'Titre : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
			{{ form_widget(mediaForm.title, {'attr' : {'class' : 'form-control'} } ) }}
		</div>

		<div class="mb-3">
			{{ form_label(mediaForm.alt, 'Alt : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
			{{ form_widget(mediaForm.alt, {'attr' : {'class' : 'form-control'} } ) }}
		</div>

		<div class="mb-3">
			{{ form_label(mediaForm.product, 'Produit : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
			{{ form_widget(mediaForm.product, {'attr' : {'class' : 'form-control'} } ) }}
		</div>

		<div class="mb-3">
			{{ form_label(mediaForm.src, 'Fichier : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
			{{ form_widget(mediaForm.src, {'attr' : {'class' : 'form-control'} } ) }}
		</div>

		{{ form_widget(mediaForm.enregistrer, { 'attr' : {'class' : 'btn btn-outline-primary'} } ) }}

		{{ form_end(mediaForm) }}
	</div>
	<footer class="footer mt-auto py-3 bg-light text-center">
		{{ admin }}
	</footer>
{% endblock %}
